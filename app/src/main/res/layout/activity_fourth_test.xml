<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_fourth_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="bkoruznjak.from.hr.androidnarodniconcept.FourthTestActivity">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_red_logo" />

        <TextView
            android:id="@+id/textRadioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLogo"
            android:layout_centerHorizontal="true"
            android:text="@string/txt_radio_desc"
            android:textColor="@color/colorPrimary"
            android:textSize="32sp" />


        <TextView
            android:id="@+id/txtFeeling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRadioText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Upravo se osjećam..."
            android:textColor="@color/colorPrimary" />


        <FrameLayout
            android:id="@+id/layoutCenterPiece"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_below="@+id/txtFeeling"
            android:layout_centerHorizontal="true">

            <bkoruznjak.from.hr.androidnarodniconcept.CustomRectangle
                android:id="@+id/btnCustomRectangle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/layoutWhiteFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_frame" />

            <View
                android:id="@+id/layoutWhiteContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="45dp"
                android:background="@drawable/white_container" />

            <bkoruznjak.from.hr.androidnarodniconcept.SecondCustomSurfaceView
                android:id="@+id/surfaceViewCustom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="52dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/txtShareEmotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutCenterPiece"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Podijeli emociju i slušaj \nkako te slušamo!"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/imagePlusSign"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/txtShareEmotion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_plus_circle_24dp" />

    </RelativeLayout>
</layout>